<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="Settings">
        <!-- Empty -->
    </style>

    <style name="Settings.BaseRootView">
        <item name="android:paddingTop">@dimen/dimen_16_dp</item>
        <item name="android:paddingBottom">@dimen/dimen_16_dp</item>
    </style>

    <style name="Settings.SubItemRootView">
        <item name="android:paddingTop">@dimen/dimen_4_dp</item>
        <item name="android:paddingBottom">@dimen/dimen_4_dp</item>
    </style>

    <style name="RootView" parent="Settings.BaseRootView">
        <item name="android:paddingLeft">@dimen/dimen_16_dp</item>
        <item name="android:paddingRight">@dimen/dimen_16_dp</item>
    </style>

    <style name="Settings.Header">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/dimen_16_dp</item>
        <item name="android:paddingLeft">@dimen/dimen_16_dp</item>
        <item name="android:paddingRight">@dimen/dimen_16_dp</item>
    </style>


    <style name="Settings.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Settings.SubItemView">
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Settings.OneLineText">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>


</resources>

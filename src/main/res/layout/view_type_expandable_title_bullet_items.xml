<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <!-- Keep this varable same name as exist in view_type_bullet_sub_item.xml
                to avoid data binding conflicts -->

        <variable
            name="expandableTitleBulletItemsData"
            type="com.oshi.libgenericsettings.data.ExpandableTitleBulletItemsData" />

        <variable
            name="itemPosition"
            type="int" />

        <import type="android.view.View" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/clickContainer"
            style="@style/RootView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                style="@style/Settings.Title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="Title example here, But it's very very very long to check"
                android:text="@{expandableTitleBulletItemsData.title}"
                app:textColor="@{expandableTitleBulletItemsData.titleColor}" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/expandButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_expand_more_black_24dp"
                app:tint="@{expandableTitleBulletItemsData.iconColor}" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/expandableContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:paddingEnd="@dimen/dimen_16_dp"
            android:paddingLeft="@dimen/dimen_16_dp"
            android:paddingRight="@dimen/dimen_16_dp"
            android:paddingStart="@dimen/dimen_16_dp"
            tools:visibility="visible"
            android:visibility="@{expandableTitleBulletItemsData.expanded? View.VISIBLE : View.GONE}">

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                tools:visibility="visible"
                android:visibility="@{expandableTitleBulletItemsData.shouldShowDivider ? View.VISIBLE : View.GONE }"
                tools:background="@color/divider"
                app:backgroundColor="@{expandableTitleBulletItemsData.dividerColor}" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/itemsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                tools:layout_editor_absoluteX="0dp" />

        </LinearLayout>

    </LinearLayout>

</layout>
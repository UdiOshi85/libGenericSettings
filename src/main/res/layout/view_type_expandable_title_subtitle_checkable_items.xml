<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="expandableTitleSubtitleCheckableItemsData"
            type="com.oshi.libgenericsettings.data.ExpandableTitleSubtitleCheckableItemsData" />

        <variable
            name="itemPosition"
            type="int" />

        <import type="android.view.View" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/clickContainer"
            style="@style/RootView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/expandableContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/title"
                style="@style/Settings.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{expandableTitleSubtitleCheckableItemsData.title, default=`Title example here, But it's very very very long to check`}"
                app:textColor="@{expandableTitleSubtitleCheckableItemsData.titleColor}"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintBottom_toTopOf="@+id/subtitle"
                app:layout_constraintEnd_toStartOf="@+id/expandButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/subtitle"
                style="@style/Settings.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{expandableTitleSubtitleCheckableItemsData.subtitle, default=`Title example here, But it's very very very long to check`}"
                app:textColor="@{expandableTitleSubtitleCheckableItemsData.subtitleColor}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/expandButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/expandButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@{expandableTitleSubtitleCheckableItemsData.iconColor}"
                app:srcCompat="@drawable/ic_expand_more_black_24dp" />


        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/expandableContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:paddingLeft="@dimen/dimen_16_dp"
            android:paddingStart="@dimen/dimen_16_dp"
            android:paddingRight="@dimen/dimen_16_dp"
            android:paddingEnd="@dimen/dimen_16_dp"
            android:visibility="@{expandableTitleSubtitleCheckableItemsData.expanded? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clickContainer"
            tools:layout_editor_absoluteX="16dp">

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:backgroundColor="@{expandableTitleSubtitleCheckableItemsData.dividerColor}"
                android:visibility="@{expandableTitleSubtitleCheckableItemsData.shouldShowDivider ? View.VISIBLE : View.GONE }"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/itemsList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                tools:layout_editor_absoluteX="0dp" />

        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>

</layout>
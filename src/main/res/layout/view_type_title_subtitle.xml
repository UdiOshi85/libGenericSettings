<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="titleSubtitleData"
            type="com.oshi.libgenericsettings.data.TitleSubtitleData" />

        <variable
            name="settingsPresenter"
            type="com.oshi.libgenericsettings.presenter.ISettingsPresenter" />

        <variable
            name="itemPosition"
            type="java.lang.Integer" />

    </data>

    <LinearLayout
        style="@style/RootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:onClick="@{(view) -> settingsPresenter.onTitleSubtitleClick(view, titleSubtitleData, itemPosition)}">

        <TextView
            android:id="@+id/title"
            style="@style/Settings.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Title example, But very long one for testing and validating"
            android:text="@{titleSubtitleData.title, default=`Title example`}"
            app:textColor="@{titleSubtitleData.titleColor}" />

        <TextView
            android:id="@+id/subtitle"
            style="@style/Settings.OneLineText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Subtitle example,, But very long one for testing and validating"
            android:text="@{titleSubtitleData.subtitle, default=`Subtitle example`}"
            app:textColor="@{titleSubtitleData.subtitleColor}" />

    </LinearLayout>

</layout>